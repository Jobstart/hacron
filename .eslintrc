{
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "no-undef": 2,
    "babel/object-shorthand": 0,
    "babel/arrow-parens": 0,
    "babel/no-await-in-loop": 1
  },
  "plugins": [
    "babel"
  ]
}
